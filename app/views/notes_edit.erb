<div class="container">
  <h1>Welcome to Note Master!</h1>
  <h2>Edit a Note</h2>
  
  <form action="/notes/<%= @note.id %>/edit" method="post">
    <input type="hidden" name="_method" value="put">
    <p><label>Title: <input type="text" name="note[title]" value="<%= @note.title %>" ></label></p>
    <p><label>Content: <input type="text" name="note[content]" value="<%= @note.content %>"></label></p>
    <input type="submit" value="Edit Note">
  </form>
</div>
